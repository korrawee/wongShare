<div class="flex flex-col w-full my-5">
    <div class="flex flex-row justify-between md:justify-center">
        <h1 class="text-center text-2xl">แก้ไขวง</h1>
        <%=link_to 'กลับ', wongshare_path(@wong.id,:baanId =>@baanId), class: '
            md:absolute md:right-5
            min-w-max 
            transition-all duration-200 
            border rounded-sm border-8 border-green-500 
            px-8 mx-1 
            cursor-pointer
            bg-white
            text-md text-gray-900
            shadow-md'%>
    </div>
    <%= form_for @wong, url: edit_wongshare_path(@wong.id, :baanId => @baanId), local: true, class: "h-full" do |f| %>
        <div class="grid grid-cols-2 gap-4 w-full my-5 text-gray-900">
            <div class="flex flex-col w-full">
                <div class="flex flex-col mb-5">
                    <%= f.label 'ชื่อวง:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.text_field :name, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                            dark:bg-gray-700 dark:text-gray-100 py' %>
                </div>
                <div class="flex flex-col mb-5">
                    <%= f.label 'ประเภท:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.select :wong_type,['ขั้นบันได', 'ดอกตาม', 'บิทดอกตาม', 'บิทลดต้น'], {class:''}, class: 'border-b-2 focus:border-green-500 text-center outline-none
                                                                                        dark:bg-gray-700 dark:text-gray-100 py' %>
                </div>
                <div class="flex flex-col mb-5">
                    <%= f.label 'เงินต้น:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.number_field :deposite, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                                    dark:bg-gray-700 dark:text-gray-100 py' %>
                </div>
                <div class="flex flex-col mb-5">
                    <%= f.label 'จำนวนมือทั้งหมด:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.number_field :people, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                                    dark:bg-gray-700 dark:text-gray-100 py'%>
                </div>
                <div class="flex flex-col mb-5">
                    <%= f.label 'ยอดส่ง:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.number_field :interest,  class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                                    dark:bg-gray-700 dark:text-gray-100 py'%>
                </div>
                <div class="flex flex-col mb-5">
                    <%= f.label 'ค่าดูแล:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.number_field :fee,  class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                                    dark:bg-gray-700 dark:text-gray-100 py'%>
                </div>
            </div>
            <div class="flex flex-col w-full">
                <div class="flex flex-col mb-5">
                    <%= f.label 'รูปแบบค่าดูแล:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.select :fee_type, ["จ่ายงวดแรก", "จ่ายงวดรับเงิน"], {class: 'bg-white py'},  class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                                                        dark:bg-gray-700 dark:text-gray-100 py'%>
                </div>  
                <div class="flex flex-col mb-5">
                    <%= f.label 'ดอกที่ได้รับ:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.text_field :income, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                                    dark:bg-gray-700 dark:text-gray-100 py'  %>
                </div>
                <div class="flex flex-col mb-5">
                    <%= f.label 'งวดแรก:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.date_field :start_date, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                                         dark:bg-gray-700 dark:text-gray-100 py'  %>
                </div>
                <div class="flex flex-col mb-5">
                    <%= f.label 'ระยะเวลาต่องวด:', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.number_field :period, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white
                                                        dark:bg-gray-700 dark:text-gray-100 py'  %>
                </div>
                <div class="flex flex-col mb-5">
                    <%= f.label 'งวดที่ได้รับ', class: 'font-bold dark:bg-gray-700 dark:text-gray-100 text-lg'%>
                    <%= f.number_field :play_cycle, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white 
                                                            dark:bg-gray-700 dark:text-gray-100 py' %>
                </div>
                <%= f.submit 'บันทึก', class: 'min-w-max 
                    transition-all duration-200 
                    border rounded-sm border-8 border-green-500 
                    px-4 py-3
                    cursor-pointer
                    bg-green-500
                    text-lg text-gray-100
                    hover:text-white hover:bg-green-600
                    shadow-md'
                %>
            </div>
        </div>
    <%end%>
</div>

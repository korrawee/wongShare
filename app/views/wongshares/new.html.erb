
<div class="flex flex-col w-full my-5">
    <div class="flex flex-row justify-between md:justify-center">
        <h1 class="text-center text-2xl">สร้างวงใหม่</h1>
        <%=link_to 'ยกเลิก', baanshare_path(@baanId), class: '
            md:absolute md:right-5
            min-w-max 
            transition-all duration-200 
            border rounded-sm border-8 border-green-500 
            px-8 mx-1 
            cursor-pointer
            bg-white
            text-md text-gray-900
            shadow-md'%>
    </div>
    <%= form_for @wong, url: wongshare_new_path(), local: true, class: "h-full" do |f| %>
            <%= f.hidden_field :baan_id, value: @baanId%>
            <div class="grid grid-cols-2 gap-4 w-full my-5 text-gray-900 dark:text-white ">
                <div class="flex flex-col w-full">
                    <div class="flex flex-col mb-5">
                        <%= f.label 'ชื่อวง:', class: 'font-bold text-lg'%>
                        <%= f.text_field :name, required: true, placeholder: "กรอกชื่อวง", class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py' %>
                    </div>
                    <div class="flex flex-col mb-5">
                        <%= f.label 'ประเภท:', class: 'font-bold text-lg'%>
                        <%= f.select :wong_type,['ขั้นบันได', 'ดอกตาม', 'บิทดอกตาม', 'บิทลดต้น'], {required: true, class:'bg-white dark:text-gray-100 '}, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 dark:bg-gray-700  py' %>
                    </div>
                    <div class="flex flex-col mb-5">
                        <%= f.label 'เงินต้น:', class: 'font-bold text-lg'%>
                        <%= f.number_field :deposite, required: true, placeholder: "ตัวอย่าง: 12345", class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py' %>
                    </div>
                    <div class="flex flex-col mb-5">
                        <%= f.label 'จำนวนมือทั้งหมด:', class: 'font-bold text-lg'%>
                        <%= f.number_field :people, required: true, placeholder: "ตัวอย่าง: 50", class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py'%>
                    </div>
                    <div class="flex flex-col mb-5">
                        <%= f.label 'ยอดส่ง:', class: 'font-bold text-lg'%>
                        <%= f.number_field :interest, required: true, placeholder: "ตัวอย่าง: 1000", class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py'%>
                    </div>
                    <div class="flex flex-col mb-5">
                        <%= f.label 'ค่าดูแล:', class: 'font-bold text-lg'%>
                        <%= f.number_field :fee, required: true, placeholder: "ตัวอย่าง: 1000", class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py'%>
                    </div>
                </div>
                <div class="flex flex-col w-full">
                    <div class="flex flex-col mb-5">
                        <%= f.label 'รูปแบบค่าดูแล:', class: 'font-bold text-lg'%>
                        <%= f.select :fee_type, ["จ่ายงวดแรก", "จ่ายงวดรับเงิน"], {required: true, class: 'bg-white dark:text-gray-100 py'},  class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 py'%>
                    </div>  
                    <div class="flex flex-col mb-5">
                        <%= f.label 'ดอกที่ได้รับ:', class: 'font-bold text-lg'%>
                        <%= f.number_field :income,min: 0,required: true, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py'  %>
                    </div>
                    <div class="flex flex-col mb-5">
                        <%= f.label 'งวดแรก:', class: 'font-bold text-lg'%>
                        <%= f.date_field :start_date, required: true, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py'  %>
                    </div>
                    <div class="flex flex-col mb-5">
                        <%= f.label 'ระยะเวลาต่องวด:', class: 'font-bold text-lg'%>
                        <%= f.number_field :period, required: true, placeholder: "หน่วยวัน, ตัวอย่าง: 2 ", class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py'  %>
                    </div>
                    <div class="flex flex-col mb-5">
                        <%= f.label 'งวดที่ได้รับ', class: 'font-bold text-lg'%>
                        <%= f.number_field :play_cycle, class: 'border-b-2 focus:border-green-500 text-center outline-none bg-white dark:bg-gray-700 dark:text-gray-100 py' %>
                    </div>
                    <%= f.submit 'สร้างวง', class: 'min-w-max 
                        transition-all duration-200 
                        border rounded-sm border-8 border-green-500 
                        px-4 py-3
                        cursor-pointer
                        bg-green-500
                        text-lg text-gray-100
                        hover:text-white hover:bg-green-600
                        shadow-md'
                    %>
                </div>
            </div>
        <%end%>
    </div>
<div class="flex flex-col items-center md:items-start items-center w-full divide-y">
    <% if account_signed_in? %>
        <div class="w-full mb-5">
            <h1 class="hidden md:block my-2 text-xl text-gray-700 dark:text-gray-100">ยอดคงเหลือวันนี้</h1>
            <h1 class="ิblock md:hidden my-2 text-xl text-gray-700 dark:text-gray-100">วว/ดด/ปปปป</h1>
            <div class="flex w-full md:justify-center items-center">
                <%= render partial: "dashboard"%>
            </div>
        </div>
        <div class="max-w-full">
            <h1 class="mt-5 text-xl text-gray-700 dark:text-gray-100">รายการวันนี้</h1>
            <div class="flex md:w-full items-center ">
                <%= render partial: "/shared/card", locals: {baans: @baansToday}%>
            </div>
        </div>
        <div class="max-w-full">
            <h1 class="mt-5 text-xl text-gray-700 dark:text-gray-100">รายการอื่น ๆ</h1>
            <div class="flex md:w-full items-center max-w-full mb-10">
                <%= render partial: "/shared/card", locals: {baans: @baansOtherDay}%>
            </div>
        </div>
    <%else%>
        <div class="h-full ml-14 mt-14 mb-10 md:ml-64">       
            <%= link_to "Sign in", new_account_session_path%>
            <%= link_to 'Sign up', new_account_registration_path%>
        </div>
    <%end%>
</div>
<%= javascript_pack_tag 'session' %>
